<div class="container">
  <div class="row">

    <div class="col-12 col-md-8">
      <div class="text-center">
        <h1>Our listing of the cars</h1>
      </div>
      <div class="cars-cards-container">
        <% @cars.each do |c| %>
          <a href="<%= car_path(c) %>" style="text-decoration: none">
            <div class="card-trip" style="width:100%; text-align:center" onclick="location.href='<%= car_path(c) %>'">
                <img src="<%= cl_image_path c.photos.first.key %>"/>
              <div class="card-trip-infos">
                <h2><%= c.brand %></h2>
                <p>â‚¬<%= c.price %></p>
              </div>
            </div>
          </a>
        <% end %>
      </div>
    </div>

    <div class="col-12 col-md-4">
      <div class="text-center">
        <h1>Find cars in your area</h1>
      </div>
      <div class ="map" style="width: 500px; height: 500px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
</div>
