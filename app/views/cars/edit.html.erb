<h1>Edit your car listing</h1>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Vehicle Details:</h3>
        <%= simple_form_for @car do |f| %>
          <%= f.input :brand, placeholder: 'f.brand '%>
          <%= f.input :description, placeholder: 'New condition, drives smoothly.' %>
          <%= f.input :year, placeholder: "2020" %>
          <%= f.input :price, placeholder: "Â£1900" %>
          <%= f.input :address, placeholder: "1 Amazing street, New York" %>
          <%= f.input :photos, as: :file, input_html: { multiple: true} %>
          <%= f.submit class: 'btn btn-gradient' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
