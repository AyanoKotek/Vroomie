<div class= "text-center">
  <h1> List your car for booking!</h1>
</div>


<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Vehicle Details:</h3>
        <%= simple_form_for @car do |f| %>
          <%= f.input :brand, placeholder: 'Ferrari' %>
          <%= f.input :description, placeholder: 'New condition, drives smoothly.' %>
          <%= f.input :year, placeholder: "2020" %>
          <%= f.input :price, placeholder: "Â£1900" %>
          <%= f.input :address, placeholder: "1 Amazing street, New York" %>
          <%= f.input :photos, as: :file, input_html: { multiple: true}, label: "Photos: 3 images required" %>
          <%= f.submit class: 'btn btn-gradient' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% if flash[:notice] %>
  <div class="success-message">
    <%= flash[:notice] %>
  </div>
<% end %>
