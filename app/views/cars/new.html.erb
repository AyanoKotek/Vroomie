<div class= "text-center">
  <h1> List your car for booking!</h1>
</div>


<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 style="text-align: center" class="mb-3">Details of your car</h3>

        <%= simple_form_for @car do |f| %>
          <div class="container">
            <div class="row">
              <div class="col-12 col-md-4">
                <%= f.input :brand, placeholder: 'Ferrari' %>
              </div>
              <div class="col-12 col-md-8">
                <%= f.input :description, placeholder: 'New condition, drives smoothly.' %>
              </div>
            </div>
            <div class="row">
              <div class="col-12 col-md-6">
                <%= f.input :year, placeholder: "2020" %>
              </div>
              <div class="col-12 col-md-6">
                <%= f.input :price, placeholder: "Â£1900" %>
              </div>
            </div>
            <%= f.input :address, placeholder: "1 Amazing street, New York" %>
            <%= f.input :photos, as: :file, input_html: { multiple: true}, label: "Photos: 3 images required" %>
            <div class="btn-submit">
              <%= f.submit class: 'btn btn-gradient', style:"text-align: center" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>

<% if flash[:notice] %>
  <div class="success-message">
    <%= flash[:notice] %>
  </div>
<% end %>
