<h1>Edit your car booking</h1>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edit your booking:</h3>
        <p>Brand: <%= @booking.car.brand %></p>
        <p>Description: <%= @booking.car.description %></p>
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :start_date, message: "Start date:" %>
          <%= f.input :end_date, message: "End date:" %>
          <%= f.submit class: "btn btn-gradient" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
