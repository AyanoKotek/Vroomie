<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>New Booking <%= @car.brand %> brand</h3>
        <h3>New Booking <%= @car.description %> Description</h3>
        <%= simple_form_for [@car, @booking] do |f| %>
          <%= f.input :date, placeholder: "Enter a date of booking" %>
          <%= f.submit class: "btn btn-flat" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
