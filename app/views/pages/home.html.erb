<div class="banner" style="background-image: url('<%= asset_path 'carbanner.png' %>');">
  <div class="banner-text">
    <header>
      <h1 class="header">Welcome to Vroomie</h1>
    </header>
  </div>
</div>

<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for..." />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>

<div class="cars-container">
  <% @cars.each do |c| %>
    <div class="card-product" onclick="location.href='<%= car_path(c) %>'">
      <img src="<%= cl_image_path c.photos.first.key %>"/>
      <div class="card-product-infos">
        <h2><%= c.brand %></h2>
        <p>â‚¬<%= c.price %></p>
        <a href="<%= car_path(c) %>" class="btn btn-primary">Details</a>
      </div>
  </div>
  <% end %>
</div>
